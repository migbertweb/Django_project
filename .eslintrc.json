{
  "env":
  {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parser": "babel-eslint",
  "extends": ["airbnb-base"],
  "parserOptions":
  {
    "ecmaVersion": 12,
    "ecmaFeatures":
    {
      "jsx": true,
      "modules": true
    },
    "sourceType": "module"
  },
  "rules":
  {
    "import/prefer-default-export": "off",
    "template-tag-spacing": ["error", "never"],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true,
        "optionalDependencies": true,
        "peerDependencies": false
      }
    ]
  }
}
